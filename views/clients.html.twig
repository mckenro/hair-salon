{% include 'head.html.twig' %}
<h1>Salon Seattle</h1>
<div class="row">
  <div class="col-md-6">
    <h4>Current Stylist:</h4>
    <h1>{{ stylist.getName }}</h1>

    {% if clients is not empty %}
        <p>The clients for {{ stylist.getName }} are:</p>
        <ul>
            {% for client in clients %}
                <li>{{ client.getName }}</li>
            {% endfor %}
        </ul>
    {% endif %}
    <p><a href="/stylists/{{ stylist.getId }}/edit">Edit this stylist</a></p>
    <p><a href='/'>Home</a></p>
  </div>

  <div class="col-md-6">
    <h2>Add a New Client</h2>

    <form action='/clients/{{ stylist.getId }}' method='post'>
      <div class="form-group">
        <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId }}">
        <input id='client_name' name='client_name' type='text' class="form-control" placeholder="Client Name">
      </div>
      <div class="form-group">
        <button type='submit' class='btn btn-primary'>Add New Client</button>
      </div>
    </form>
  </div>
</div>

