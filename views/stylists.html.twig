{% include 'head.html.twig' %}
<h1>Salon Seattle</h1>
<div class="row">
  <div class="col-md-6">
    <h4>Current Stylist:</h4>
    <h1>{{ stylists.getName }}</h1>

    {% if clients is not empty %}
        <p>The clients for {{ stylists.getName }} are:</p>
        <ul>
            {% for client in clients %}
                <li>{{ client.getName }}</li>
            {% endfor %}
        </ul>
    {% endif %}
  </div>

  <div class="col-md-6">
    <h2>Add a New Client</h2>

    <form action='/clients' method='post'>
        <input id="stylist_id" name="stylist_id" type="hidden" value="{{ stylist.getId() }}">
        <label for='client_name'>Client Name</label>
        <input id='client_name' client='client_name' type='text'>

        <button type='submit' class='btn btn-primary'>Add New Client</button>
    </form>

    <p><a href="/stylists/{{ stylist.getId }}/edit">Edit this stylist</a></p>

    <p><a href='/'>Home</a></p>
  </div>
</div>

{% include 'foot.html.twig' %}
