{% include 'head.html.twig' %}

<h1>Update information for {{ stylist.getName }}</h1>
<div class="row">
  <div class="col-md-6">
    <form action="/stylists/{{ stylist.getId }}" method="post">
      <input name="_method" type="hidden" value="patch">

      <label for="name">Edit this Stylist:</label>
      <input id="name" name="name" type="text">

      <button type="submit">Update Stylist</button>
    </form>
  </div>

  <div class="col-md-6">
    <form action="/stylists/{{ stylist.getId }}" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class = "btn btn-primary">Remove this stylist</button>
    </form>
  </div>

{% include 'foot.html.twig' %}
