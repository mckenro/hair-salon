{% include 'head.html.twig' %}

<h1>Update information for {{ clients.getName }}</h1>
<div class="row">
  <div class="col-md-6">
    {% if clients is not empty %}
        <h2>Meet Our Stylists:</h2>
        <ul>
            {% for client in clients %}
                <li><a href="/clients/{{ client.getId }}">{{ client.getName }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
      <p>There are no clients yet!</p>
    {% endif %}
    <form action="/clients/{{ clients.getId }}" method="post">
      <input name="_method" type="hidden" value="patch">

      <label for="name">Edit this Client:</label>
      <input id="name" name="name" type="text">

      <button type="submit">Update Client</button>
    </form>
  </div>

  <div class="col-md-6">
    <form action="/clients/{{ clients.getId }}" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class = "btn btn-primary">Remove this client</button>
    </form>
  </div>

{% include 'foot.html.twig' %}
