{% include 'head.html.twig' %}

<h1>Update information for {{ clients.getName }}</h1>
<div class="row">
  <div class="col-md-6">
    {% if clients is not empty %}
        <ul>
            {% for client in clients %}
                <li><a href="/clients/{{ client.getId }}">{{ client.getName }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
      <p>There are no clients yet!</p>
    {% endif %}
    <form action="/clients/{{ clients.getId }}" method="post">
      <div class="form-group">
        <input name="_method" type="hidden" value="patch">
        <label for="name">Edit this Client:</label>
        <input placeholder="Insert Updated Client Name" class="form-control" id="name" name="name" type="text">
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Update Client</button>
      </div>
    </form>
    <form action="/clients/{{ clients.getId }}" method="post">
      <input name="_method" type="hidden" value="delete">
      <button type="submit" class = "btn btn-danger">Remove this client</button>
    </form>
  </div>

  <div class="col-md-6">
    <h2><a href="/">Return Home</a></h2>

  </div>

{% include 'foot.html.twig' %}
