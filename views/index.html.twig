{% include 'head.html.twig' %}

<h1>Salon Seattle</h1>
<div class="row">
  <div class="col-md-6">

  {% if stylists is not empty %}
      <h2>Meet Our Stylists:</h2>
      <ul>
          {% for stylist in stylists %}
              <li><a href="/stylists/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
          {% endfor %}
      </ul>
  {% else %}
    <p>There are no stylists yet!</p>
  {% endif %}
  </div>
  <div class="col-md-6">

    <h2>Add a new stylist:</h2>

    <form action="/stylists" method="post">
      <div class='form-group'>
        <input id="name" name="name" type="text" class="form-control" placeholder="Stylist Full Name">
      </div>
      <div class='form-group'>
        <button type="submit" class="btn btn-primary">Add New Stylist</button>
      </div>
    </form>
  </div>
</div>

{% include 'foot.html.twig' %}
